<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quaso" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/deep_koamaru</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="wrap_content">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="match_parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="fill_constraint">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="rounded_corner_flag">
        <item name="cornerSize">30dp</item>
    </style>

    <style name="rounded_corner_placeholder">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ThemeOverlay.search" parent="Theme.Quaso">
        <!-- Text color -->
        <item name="android:editTextColor">#AAAAAA</item>
        <item name="android:textSize">14sp</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:gravity">start</item>
    </style>


</resources>